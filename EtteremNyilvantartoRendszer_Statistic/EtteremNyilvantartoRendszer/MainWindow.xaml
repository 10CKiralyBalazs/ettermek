<Window x:Class="EtteremNyilvantartoRendszer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EtteremNyilvantartoRendszer"
        xmlns:viewmodel="clr-namespace:EtteremNyilvantartoRendszer.ViewModel"
        xmlns:view="clr-namespace:EtteremNyilvantartoRendszer.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:RestaurantViewModel}">
            <view:RestaurantView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:ControlPanelViewModel}">
            <view:ControlPanelView />
        </DataTemplate>
    </Window.Resources>
    <StackPanel>
        <DockPanel>
            <Menu>
                <MenuItem Header="Főmenüpont">
                    <MenuItem Header="ControlPanel" Command="{Binding ShowControlPanelViewCommand}"></MenuItem>
                    <MenuItem Header="Éttermek" Command="{Binding ShowRestaurantViewCommand}"></MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <ContentControl Content="{Binding CurrentView}" />
    </StackPanel>
</Window>
