<UserControl x:Class="EtteremNyilvantartoRendszer.View.ControlPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EtteremNyilvantartoRendszer.View"
             xmlns:viewmodel="clr-namespace:EtteremNyilvantartoRendszer.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="Silver">
    <UserControl.DataContext>
        <viewmodel:ControlPanelViewModel />
    </UserControl.DataContext>
    <WrapPanel>
        <Border Margin="5" Padding="5" BorderBrush="Black" BorderThickness="1" CornerRadius="8">
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding NumberofRestaurants}" />
                <Label>Éttermek Száma</Label>
            </StackPanel>
        </Border>
        <Border Margin="5" Padding="5" BorderBrush="Black" BorderThickness="1" CornerRadius="8">
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding TotalIncome}" />
                <Label>Öszbevétel</Label>
            </StackPanel>
        </Border>
        <Border Margin="5" Padding="5" BorderBrush="Black" BorderThickness="1" CornerRadius="8">
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding AverageIncome}" />
                <Label>Átlag Bevétel</Label>
            </StackPanel>
        </Border>
    </WrapPanel>
</UserControl>
